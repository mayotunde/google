    <script>

* initialize the map and assign mapoptions zoom center and the mapTypeId
to define the type of google base map 
     	 
	var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          zoom: 8,
          center: {lat: 9, lng: 8},
	mapTypeId: google.maps.MapTypeId.ROADMAP
	        });
	
	}

* Close the script 

</script>

