    <title>Fusion Tables layers</title>
   
  </head>
  <body>
    <div id="map" style="width:700px;height:600px"></div>
    <script>
      function initMap() {
var mapProp = {
    center:new google.maps.LatLng(6,4),
    zoom:3,
    mapTypeId:google.maps.MapTypeId.HYBRID
  };

        var map = new google.maps.Map(document.getElementById('map'),
          mapProp        );

        
 var layer = new google.maps.FusionTablesLayer({
          query: {
            select: '\'Geocodable address\'',
            from: '1TCpx53TFI6VepsUyaF_zHfaeyDF8p-imkV7IoOe0'
          }
        });
        layer.setMap(map);
      }

    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzGrYijLQviiwIjrwSDv9mQcXXmTdcpMA&callback=initMap">
    </script>
  </body>
