<script type='text/javascript'>
var map = new L.Map('map', {center: new L.LatLng(9.0167, 7.7118), zoom: 5});

L.polygon([[7.00, 3.00],[7.50, 3.00],[7.50, 3.50], [7.00, 3.50]]).addTo(map);

L.polyline([[9.50, 7.80], [8.00, 6.78], [6.44, 3.78]]).addTo(map);

var marker = L.marker([9.15, 8.29]).bindPopup('jack').addTo(map);


var styles = [{ featureType: 'all', stylers: [{hue: '#FF000'}] }];

var ggl = new L.Google('ROADMAP', {mapOptions: {styles: styles}});
map.addLayer(ggl);



</script>
